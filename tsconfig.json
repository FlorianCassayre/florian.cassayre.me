{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["vite/client"],
    "incremental": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    "test/**/*.ts",
    "vite.config.ts",
    "eslint.config.js",
    ".prettierrc.cjs"
  ]
}
